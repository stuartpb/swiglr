!!! html
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet", href="galstyle.css")
    title= pagetitle
  body
    #wrapper
      header
      table#thumbs
        tbody
          each row in rows
            tr
              each cell in row
                td
                  a(href=cell.dest)
                    img(src=cell.thumb)
      nav
        - for (var i = 0; i < totalpages; ++i)
          if i == pagenum
            span.this-page= i+1
          else
            if i==0
              target = 'index.html'
            else
              target = 'page'+(i+1)+'.html'
            a(href=target)= i+1
